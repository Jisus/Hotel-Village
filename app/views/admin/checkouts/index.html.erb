<%- model_class = Checkout -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cliente) %></th>
      <th><%= model_class.human_attribute_name(:quarto) %></th>
      <th><%= model_class.human_attribute_name(:dataEntrada) %></th>
      <th><%= model_class.human_attribute_name(:dataSaida) %></th>
      <th><%= model_class.human_attribute_name(:tipoPagamento) %></th>
      <th><%= model_class.human_attribute_name(:valor_total) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @checkouts.each do |checkout| %>
      <tr>
        <td><%= link_to checkout.id, admin_checkout_path(checkout) %></td>
        <td><%= checkout.cliente %></td>
        <td><%= checkout.quarto %></td>
        <td><%=l checkout.dataEntrada %></td>
        <td><%=l checkout.dataSaida %></td>
        <td><%= checkout.tipoPagamento %></td>
        <td><%= checkout.valor_total %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_checkout_path(checkout),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>