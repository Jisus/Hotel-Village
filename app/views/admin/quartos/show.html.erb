<%- model_class = Quarto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:solterio) %>:</strong></dt>
  <dd><%= @quarto.solterio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:casal) %>:</strong></dt>
  <dd><%= @quarto.casal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @quarto.desc %></dd
  <dt><strong><%= model_class.human_attribute_name(:diaria) %>:</strong></dt>
  <dd><%= @quarto.diaria %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_quartos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_quarto_path(@quarto), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_quarto_path(@quarto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
