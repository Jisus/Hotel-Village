<%- model_class = Quarto -%>
<div class="page-header">
	<form class="navbar-search pull-right" action="">
		<input type="text" class="search-query" name="q" placeholder="Procurar" value="<%= @pesquisa %>">
	</form>
	<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th><%= model_class.human_attribute_name(:id) %></th>
			<th><%= model_class.human_attribute_name(:solterio) %></th>
			<th><%= model_class.human_attribute_name(:casal) %></th>
			<th><%= model_class.human_attribute_name(:desc) %></th>
			<th><%= model_class.human_attribute_name(:diaria) %></th>
			<th><%= model_class.human_attribute_name(:flags_id) %></th>
			<th><%=t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
		<% @quartos.each do |quarto| %>
		<tr>
			<td><%= link_to quarto.id, admin_quarto_path(quarto) %></td>
			<td><%= quarto.solterio %></td>
			<td><%= quarto.casal %></td>
			<td><%= quarto.desc %></td>
			<td><%= quarto.diaria %></td>
			<td>
				<% for flag in Flag.find(:all) %> 
				<%= quarto.flags.include?(flag) ? flag.nome : nil %>
				<%= quarto.flags.include?(flag) && flag != quarto.flags.last ? ', ' : nil %>
				<% end %>  
			</td>
			<td>
				<%= link_to t('.edit', :default => t("helpers.links.edit")),
				edit_admin_quarto_path(quarto), :class => 'btn btn-mini' %>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
				admin_quarto_path(quarto),
				:method => :delete,
				:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
				:class => 'btn btn-mini btn-danger' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_admin_quarto_path,
:class => 'btn btn-primary' %>
