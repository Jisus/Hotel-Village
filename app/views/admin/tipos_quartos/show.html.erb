<%- model_class = TiposQuarto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="errorShow">
	<%= error_messages_for :tipos_quarto %>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @tipos_quarto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cama_solteiro) %>:</strong></dt>
  <dd><%= @tipos_quarto.cama_solteiro %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cama_casal) %>:</strong></dt>
  <dd><%= @tipos_quarto.cama_casal %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_tipos_quartos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_tipos_quarto_path(@tipos_quarto), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_tipos_quarto_path(@tipos_quarto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
