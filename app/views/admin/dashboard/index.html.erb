<h2>Ãšltimas Reservas</h2>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Quarto</th>
			<th>Cliente</th>
			<th>Data da Reserva</th>
			<th>Data do Registro</th>
			<th>Visualizar</th>
		</tr>
	</thead>
	<tbody>
		<% @u_reservas.each do |reserva| %>
		<tr>
			<td><%= link_to reserva.Quarto.nome, admin_quarto_path(reserva.Quarto) %></td>
			<td><%= link_to reserva.Cliente.nome_completo, admin_cliente_path(reserva.Cliente) %></td>
			<td><%=l reserva.DataEntrada %></td>
			<td><%=l reserva.created_at %></td>
			<td><%= link_to "Visualizar", admin_reserva_path(reserva) %></td>
		</tr>
		<% end %>
	</tbody>
</table>