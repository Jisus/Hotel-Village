<%- model_class = Usuario -%>
<div class="page-header">
	<form class="navbar-search pull-right" action="">
		<input type="text" class="search-query" name="q" placeholder="Procurar" value="<%= @pesquisa %>">
	</form>
	<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th><%= model_class.human_attribute_name(:id) %></th>
			<th><%= model_class.human_attribute_name(:nome) %></th>
			<th><%= model_class.human_attribute_name(:sobrenome) %></th>
			<th><%= model_class.human_attribute_name(:tipo) %></th>
			<th><%= model_class.human_attribute_name(:email) %></th>
			<th><%=t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
		<% @usuarios.each do |usuario| %>
		<tr>
			<td><%= link_to usuario.id, admin_usuario_path(usuario) %></td>
			<td><%= usuario.nome %></td>
			<td><%= usuario.sobrenome %></td>
			<td><%= usuario.tipo %></td>
			<td><%= usuario.email %></td>
			<td>
				<%= link_to t('.edit', :default => t("helpers.links.edit")),
				edit_admin_usuario_path(usuario), :class => 'btn btn-mini' %>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
				admin_usuario_path(usuario),
				:method => :delete,
				:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
				:class => 'btn btn-mini btn-danger' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_admin_usuario_path,
:class => 'btn btn-primary' %>
