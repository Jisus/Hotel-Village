<%= form_for ([:admin, @usuario]), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sobrenome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sobrenome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
	<% if params[:action] == 'update' || params[:action] == 'edit' %>
  <div class="control-group">
    <%= f.label :current_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :current_password, :class => 'text_field' %>
    </div>
  </div>
	<% end %>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :autocomplete => "off", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_usuarios_path, :class => 'btn' %>
  </div>
<% end %>
